        </td>
        <td>INSERT INTO tabelle (spalte1, spalte2, spalte3) VALUES ('Wert1', 'Wert2', 'Wert3')</td>
    </tr>
    <tr>
        <td>
            Daten aktualisieren
        </td>
        <td>UPDATE tabelle SET spalte1='Wert1', spalte2='Wert2' WHERE id=1</td>
    </tr>
    <tr>
        <td>
            Tabelle löschen
        </td>
        <td>DROP TABLE tabelle</td>
    </tr>
    <tr>
        <td>
